# Port Configuration
FRONTEND_PORT=51000
BACKEND_PORT=52000
DATABASE_PORT=53000

# Environment
NODE_ENV=development

# Service Configuration
BACKUP_INTERVAL_MINUTES=60
HEALTH_CHECK_INTERVAL_MINUTES=15
CONTEXT_CAPTURE_INTERVAL_MINUTES=5

# ProDash_Tools Master Configuration

# Local MongoDB (Factory Factory Database)
MONGODB_URI=mongodb://localhost:27017/prodash_master
MONGODB_TEST_URI=mongodb://localhost:27017/prodash_master_test

# Template Generation Settings
TEMPLATE_OUTPUT_DIR=./generated_projects
TEMPLATE_CACHE_DIR=./.template_cache

# Project Management
PROJECT_STORAGE_TYPE=local  # Options: local, cloud
PROJECT_FILES_DIR=./projects

# Template Settings
BASIC_TEMPLATE_PATH=./templates/basic-project
ADVANCED_TEMPLATE_PATH=./templates/advanced-project
API_TEMPLATE_PATH=./templates/api-project

# Development Server
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your_development_secret_key
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Feature Flags
ENABLE_LOCAL_DEVELOPMENT=true
ENABLE_CLOUD_DEPLOYMENT=false
ENABLE_TEMPLATE_CUSTOMIZATION=true

# Context-Keeper Configuration
CONTEXT_KEEPER_ENABLED=true
CONTEXT_KEEPER_AUTO_CAPTURE=true
CONTEXT_KEEPER_CAPTURE_INTERVAL=300000
CONTEXT_KEEPER_MIN_CONTENT_LENGTH=100
CONTEXT_KEEPER_MAX_SESSIONS=10
CONTEXT_KEEPER_PATH=.context-keeper

MONGO_URL=mongodb://localhost:27017/prodash_master
OPENAI_API_KEY=your_openai_key_here 