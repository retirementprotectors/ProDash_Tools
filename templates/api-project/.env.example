# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/your-database
MONGODB_TEST_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/your-test-database

# Application Settings
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Security
JWT_SECRET=your-jwt-secret
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Backup Settings
BACKUP_ENABLED=true
BACKUP_CRON=0 0 * * *
BACKUP_RETENTION_DAYS=30

# Context Management
CONTEXTS_PATH=.context-keeper/contexts
BACKUPS_PATH=.context-keeper/backups

# API Documentation
SWAGGER_TITLE=ProDash API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=API documentation for ProDash Tools 